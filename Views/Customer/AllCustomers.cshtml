@model IPagedList<CUST_DATA>
@{
    ViewBag.Title = "AllCustomers";
}

<div class="container" style="margin-top:3%;">

    <div class="panel panel-default box box-danger">
        <div class="panel-heading">
            <h3>Customers</h3>
        </div>

        <div class="panel-body">
            <div class="input-group col-lg-2 col-lg-offset-9 right" style="display:block;width:100%;">
                <a href="/Customer/CreateCustomerAccount" class="btn btn-success btn-lg"><span class="glyphicon glyphicon-plus-sign"></span> Add Customer Account</a>
            </div>
            <div class="container-fluid box-body">
                <div class="row">
                    <div class="box-header">
                        <h4>Registered Customers</h4>
                    </div>
                </div>

                <div class="row" style="margin-bottom:1%;">
                    <form method="get" action="@Url.Action("AllCustomers")" @*data-pxp-ajax="true" data-pxp-target="#registeredCustomers"*@>
                        <div class="col-xs-7 col-sm-5 col-md-3">
                            <div class="input-group col-sm-12">
                                <input type="search" class="form-control" placeholder="Search&hellip;" name="searchTerm" />
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> </button>
                                </span>
                            </div>
                        </div>
                    </form>

                </div>

                @Html.Partial("_CustomersTable", Model)
            </div>
            <div class="panel-footer text-center">
                <div class="" data-pxp-target="">
                    @Html.PagedListPager(Model, page => Url.Action("AllCustomers", new { ViewBag.searchTerm, page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                </div>
            </div>
        </div>
    </div>
</div>
@Html.Raw(TempData["toastMessage"])
