@model IEnumerable<ParcelXpress.Models.REQT_DRVR>

@{
    ViewBag.Title = "New Driver";
}


@if (Model.Count() == 0)
{
    <div class="container">
        <div class="h4 text-danger">
            <h4>No new driver request found</h4>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="col-lg-10">
            <table class="table table-striped table-hover table-responsive" style="background-color:#f7f4d8">
                <caption class="h3 text-danger">Driver Requests</caption>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Login name</th>
                        <th>Contact Number</th>
                        <th></th>
                        <th></th>
                      
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="disabled">
                            <td>@item.DriverName</td>
                            <td>@item.LoginName</td>
                            <td>@item.ContactNo</td>
                            <td>@Html.ActionLink("View Details","RegisterDriver","Driver",new{id=@item.DriverReqId},new{@class="btn btn-primary"})</td>
                            <td>@Html.ActionLink("Delete", "DeleteDriverRequest", "Driver", new { id = @item.DriverReqId }, new { @class = "btn btn-danger" })</td>
                           
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@Html.Raw(TempData["toastMessage"])