@model IPagedList<CUST_DATA>
@{
    ViewBag.Title = "AllCustomersAccount";
}

<div class="container-flud" style="margin-top:3%;">
    <div class="row">
        <div class="col-md-9">
            <div class="panel panel-default box box-danger">
                <div class="panel-heading">
                    <h3>Customers</h3>
                </div>

                <div class="panel-body">
                    <div class="container-fluid box-body">
                        <div class="row">
                            <div class="box-header">
                                <h4>Customers with account</h4>
                            </div>
                        </div>

                        <div class="row" style="margin-bottom:1%;">
                            <form method="get" action="@Url.Action("AllCustomersAccount")" @*data-pxp-ajax="true" data-pxp-target="#registeredCustomers"*@>
                                <div class="col-xs-7 col-sm-5 col-md-3">
                                    <div class="input-group col-sm-12">
                                        <input type="search" class="form-control" placeholder="Search&hellip;" name="searchTerm" />
                                        <span class="input-group-btn">
                                            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> </button>
                                        </span>
                                    </div>
                                </div>
                            </form>

                        </div>

                        @Html.Partial("_CustomersTableAccount", Model)
                    </div>
                    <div class="panel-footer text-center">
                        <div class="" data-pxp-target="">
                            @Html.PagedListPager(Model, page => Url.Action("AllCustomersAccount", new { ViewBag.searchTerm, page }), PagedListRenderOptions.ClassicPlusFirstAndLast)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 hidden" id="selectedCustomerDiv">
            @Html.Action("_SelectedCustomerAccount","Accounts")
        </div>
    </div>
</div>
@Html.Raw(TempData["toastMessage"])
