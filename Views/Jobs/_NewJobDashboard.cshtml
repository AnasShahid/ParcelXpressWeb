                            </div>
                            @Html.ValidationMessageFor(m => m.DropAddress2, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row VisiblityHidden">
                        <div class="col-md-6 VisiblityHidden" id="address3">
