                                @Html.TextBoxFor(m => m.Price, htmlAttributesAmount)
                            </div>
                            @Html.ValidationMessageFor(m => m.Price, null, new { @class = "text-danger" })
                        </div>
                        <div class="col-md-6">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
