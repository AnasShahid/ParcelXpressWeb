@model List<JOB>
@{
    ViewBag.Title = "ActiveJobs";
}

@if (Model.Count <= 0)
{
    <div class="container">
        <div class="h4 text-danger">
            <h4>There are no active jobs for this driver at the moment.</h4>
        </div>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3>Active Jobs</h3>
            </div>
            <div class="panel-body" id="activeJobsList">
                @foreach (var item in Model)
                {
                    @Html.Partial("_JobListItem", item)
                }

            </div>
            <div class="panel-footer text-center">
                <div class="pagedList" data-pxp-target="#activeJobsList">
                </div>
            </div>
        </div>
    </div>
}

@Html.Raw(TempData["toastMessage"])