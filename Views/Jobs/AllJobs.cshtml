@model IPagedList<JOB>
@{
    ViewBag.Title = "AllJobs";
    
}

<div class="container" style="margin-top:3%;" id="allJobs">

    <div class="panel panel-default box box-danger">
        <div class="panel-heading">
            <h3>Jobs</h3>
        </div>
        <div class="panel-body">
            <div class="container-fluid box-body">
                <div class="row">
                    <div class="box-header">
                        <h4>All Jobs</h4>
                    </div>
                </div>

                <div class="row" style="margin-bottom:1%;">
                    <div class="col-xs-6 col-sm-5 col-md-3">
                        <div class="input-group">
                            <form method="get" action="@Url.Action("AllJobs")"  @*data-pxp-ajax="true" data-pxp-target="#allJobs"*@>
                                <input type="search" class="form-control" placeholder="Search&hellip;" name="searchTerm" />
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> </button>
                                </span>
                            </form>
                        </div>
                    </div>
                    <div class="col-xs-6 col-sm-5 col-md-3 col-md-offset-2">
                        <div class="input-group">
                            <form method="get" action="@Url.Action("AllJobs")"  @*data-pxp-ajax="true" data-pxp-target="#allJobs"*@>
                                <input type="search" class="form-control" placeholder="Search by date&hellip;" name="searchDate" id="searchDate" />
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span> </button>
                                </span>
                            </form>
                        </div>
                    </div>
                </div>

                @Html.Partial("_JobsTable", Model)
            </div>
        </div>
        <div class="panel-footer text-center">
            <div class="" data-pxp-target="">
                @Html.PagedListPager(Model, page => Url.Action("AllJobs", new { ViewBag.searchTerm, page, ViewBag.searchDate }), PagedListRenderOptions.ClassicPlusFirstAndLast)
            </div>
        </div>

    </div>
</div>

<script type="text/javascript">
    $('#searchDate').datepicker(); //Initialise any date pickers
</script>
