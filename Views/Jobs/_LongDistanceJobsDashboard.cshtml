@model IPagedList<JOB>
<div id="activeLongDistanceJobsRefresh">
    <div id="activeLongDistanceJobsGrid">
        <div class="container-fluid">
            <div class="panel panel-primary mdl-shadow--4dp">
                <div class="panel-heading panel-title">
                    <div class="mdl-card__title zero-margins">
                        <h5 style="color:white;" class="zero-margins">Long DistanceJobs</h5>
                        <div class="mdl-layout-spacer"></div>
                        <a href="/Jobs/_LongDistanceJobsDashboard" class="btn mdl-button--accent mdl-button--raised refreshButton" data-pxp="true" data-pxp-target="#activeLongDistanceJobsGrid"><span class="glyphicon glyphicon-refresh"></span></a>
                    </div>

                </div>
                <div class="panel-body">
                    @if (Model.Count <= 0)
                    {
                        <div class="container">
                            <div class="text-danger" >
                                <p style="word-wrap:break-word;line-break:auto;">
                                    <h6 class="col-sm-12">There are no active<br /> long distance jobs</h6>
                                </p>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row label-primary">
                            <div class="label-primary" style="color:#e9e5b6; margin-left:3px;">Active Jobs:@ViewBag.JobCount</div>
                        </div>
                        <div class="panel-body custom-list" id="activeLongDistanceJobsList">
                            @foreach (var item in Model)
                            {
                                @Html.Partial("_JobListItemCompact", item)
                                <hr />
                            }

                        </div>
                    }
                </div>
                <div class="panel-footer text-center">
                    <div class="pagedList" data-pxp-target="#activeLongDistanceJobsGrid">
                        @Html.PagedListPager(Model, page => Url.Action("_LongDistanceJobsDashboard", new { page }), PagedListRenderOptions.MinimalWithPageCountText)
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
