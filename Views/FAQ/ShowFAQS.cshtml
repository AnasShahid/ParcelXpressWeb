@model IPagedList<FAQ>

<section class="content-header container-fluid">
    <div class="col-lg-10 col-md-10"><h3>FAQs</h3></div>
    <div class="col-lg-2 col-md-2" style="padding-top:2%;"><a href="/FAQ/AddFaq" class="btn btn-primary"><span class="glyphicon glyphicon-plus"> Add New</span></a></div>
</section>

@if (Model.Count <= 0)
{
    <br />
    <div class="row">
        <div class="container">
            <div class="h4 text-danger">
                <h4>There were no FAQs found, Click Add to create one.</h4>
            </div>
        </div>
    </div>
}
else
{

    <div class="container-fluid">
        <div class="panel panel-primary container-fluid">
            <div class="panel-body" id="faqList">
                @foreach (var item in Model)
                {
                    <hr />
                    @Html.Partial("_FaqListItem", item)
                }

            </div>
            <div class="panel-footer text-center">
                <div class="pagedList" data-pxp-target="#faqList">
                    @Html.PagedListPager(Model, page => Url.Action("ShowFAQS", new { page }), PagedListRenderOptions.MinimalWithItemCountText)
                </div>
            </div>
        </div>
    </div>
}
@Html.Raw(TempData["toastMessage"])
